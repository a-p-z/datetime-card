{
  "name": "datetime-card",
  "version": "1.0.6",
  "description": "A minimalistic card for Home Assistant Lovelace UI which shows how many days it has been between any input_datetime and today.",
  "author": {
    "email": "antpza@gmail.com",
    "name": "apz",
    "url": "https://github.com/a-p-z"
  },
  "scripts": {
    "build": "rollup -c",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "test": "jest src",
    "test:watch": "npm run test -- --watch",
    "coverage": "jest --collect-coverage"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.26.0",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-typescript": "^12.1.2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/svelte": "^5.2.6",
    "@tsconfig/svelte": "^5.0.4",
    "@types/jest": "^29.5.14",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "rollup": "^4.29.1",
    "rollup-plugin-css-only": "^4.5.2",
    "rollup-plugin-svelte": "^7.2.2",
    "svelte": "^5.15.0",
    "svelte-check": "^4.1.1",
    "svelte-dnd-action": "^0.9.53",
    "svelte-jester": "^5.0.0",
    "svelte-preprocess": "^6.0.3",
    "ts-jest": "^29.2.5",
    "tslib": "^2.8.1",
    "typescript": "^5.7.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/a-p-z/datetime-card.git"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.svelte$": [
        "svelte-jester",
        {
          "preprocess": true
        }
      ],
      "^.+\\.js$": "babel-jest",
      "^.+\\.ts$": "ts-jest"
    },
    "moduleFileExtensions": [
      "js",
      "ts",
      "svelte"
    ],
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom"
    ]
  },
  "type": "module"
}
